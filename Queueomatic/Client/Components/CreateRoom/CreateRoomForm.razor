@using BlazorBootstrapToasts
@using Queueomatic.Client.Services.ManageVisitedRooms
@inject HttpClient HttpClient;
@inject NavigationManager NavigationManager;
@inject IManageVisitedRooms ManageVisitedRooms;

<div class="component">
    <div class="form-container">
        <p class="title">
            Create Room
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" @onclick="ShowInfo" fill="currentColor" class="info bi bi-info-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                </svg>
        </p>

        <EditForm class="form" Model="_roomDto">
            <div class="input-group">
                <label for="username">Room Name</label>
                <input type="text" name="username" placeholder="Room name" class="input-field"
                       id="username" autocomplete="off" @bind-value="_roomDto.Name">
            </div>
            <div class="button-group">
                <button class="button save-button" @onclick="CreateRoom">
                    <span>Create</span>
                </button>
            </div>
        </EditForm>
    </div>
    <Toast @ref="Toast"></Toast>
</div>